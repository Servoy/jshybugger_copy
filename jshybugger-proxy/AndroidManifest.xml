<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jshybugger.proxy"
    android:versionCode="7"
    android:versionName="1.0.7" >

    <!-- JsHybugger needs network access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="org.jshybugger.proxy.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- JSHybugger debug service -->
        <service
            android:name="org.jshybugger.proxy.ProxyService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="org.jshybugger.proxy.DebugService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="org.jshybugger.proxy.LogActivity"
            android:label="@string/title_activity_log" >
        </activity>
    </application>

</manifest>